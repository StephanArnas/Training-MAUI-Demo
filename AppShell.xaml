<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DemoLayout.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DemoLayout"
    xmlns:views="clr-namespace:DemoLayout.Presentation.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Stack"
            ContentTemplate="{DataTemplate views:StackLayoutPage}"
            Icon="menu.png" />
        <ShellContent
            Title="Absolute"
            ContentTemplate="{DataTemplate views:AbsolutePage}"
            Icon="menu.png" />
    </TabBar>

</Shell>
