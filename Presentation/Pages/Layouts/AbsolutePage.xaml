<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DemoLayout.Presentation.Pages.AbsolutePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Absolute">
    <AbsoluteLayout>

        <Rectangle
            AbsoluteLayout.LayoutBounds="20, 20, 100, 50"
            AbsoluteLayout.LayoutFlags="None"
            BackgroundColor="Red" />

        <Rectangle
            AbsoluteLayout.LayoutBounds="150,20,100,50"
            AbsoluteLayout.LayoutFlags="None"
            BackgroundColor="Blue" />

        <Rectangle
            AbsoluteLayout.LayoutBounds="0.5,0.5,0.5,0.1"
            AbsoluteLayout.LayoutFlags="All"
            BackgroundColor="Green" />

        <ImageButton
            AbsoluteLayout.LayoutBounds="0.9,0.9,50,50"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            BackgroundColor="Cyan"
            CornerRadius="25" />

    </AbsoluteLayout>
</ContentPage>