<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DemoLayout.Presentation.Pages.ListViewPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:page="clr-namespace:DemoLayout.Presentation.Pages"
    Title="ListViewPage"
    x:DataType="page:ListViewPage">
    <VerticalStackLayout>
        <Label HorizontalOptions="Center" Text="Welcome to ListViewPage!" />

        <ListView
            x:Name="listView"
            IsPullToRefreshEnabled="True"
            ItemSelected="OnItemSelected"
            ItemsSource="{Binding Items}"
            SelectionMode="None">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding .}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </VerticalStackLayout>
</ContentPage>